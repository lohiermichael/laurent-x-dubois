<!DOCTYPE html>
<html lang="<%= currentLang %>">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta
        name="keywords"
        content="<%= t('common.meta.keywords') %>" />
    <meta
        name="description"
        content="<%= locals.pageDescription || t('common.meta.defaultDescription') %>" />
    <title>
        <%= locals.pageTitle || t('common.meta.defaultTitle') %>
    </title>
    <link
        href="http://fonts.googleapis.com/css?family=Source+Sans+Pro:200,300,400|
              Marcellus+SC|Lato:100,300,400,700|Quicksand:300,400|
              Source+Code+Pro:200,300,400|Open+Sans:400,300|Roboto:400,100,300"
        rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="/css/main.css">
    <link rel="apple-touch-icon" sizes="180x180" href="/img/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/img/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/img/favicon-16x16.png">
    <link rel="manifest" href="/img/site.webmanifest">
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script
        async
        src="https://www.googletagmanager.com/gtag/js?id=<%= googleAnalyticsMeasurementId %>">
    </script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());
        gtag(
            'config',
            '<%= googleAnalyticsMeasurementId %>',
            {'cookie_flags': 'SameSite=None;Secure'}
        );
    </script>
    <script type="module" src="/js/header.js" defer></script>
    <script type="module" src="/js/menu-open.js" defer></script>
    <% if (locals.otherCSSFile) { %>
        <link rel="stylesheet" href="/css/<%= otherCSSFile %>.css" />
    <% } %>
    <% if (locals.otherJSFile) { %>
        <script type="module" src="/js/<%= otherJSFile %>.js" defer></script>
    <% } %>
</head>

<body>
    <header class="header">
        <div class="burger-button">
            <div class="burger"></div>
        </div>
        <ul class="menu-nav">
            <li class="menu-nav__item menu-nav__item-with-dropdown">
                <a href="#" onclick="return false;" class="menu-nav__link">
                    <%= t('components.navigation.menu.fashion.title') %>
                </a>
                <ul class="menu-nav__dropdown-menu">
                    <li class="menu-nav__dropdown-item">
                        <a href="/fashion-week-1" class="menu-nav__link">
                            <%= t('components.navigation.menu.fashion.submenu.fashionWeek1') %>
                        </a>
                    </li>
                    <li class="menu-nav__dropdown-item">
                        <a href="/fashion-week-2" class="menu-nav__link">
                            <%= t('components.navigation.menu.fashion.submenu.fashionWeek2') %>
                        </a>
                    </li>
                    <li class="menu-nav__dropdown-item">
                        <a href="/portraits" class="menu-nav__link">
                            <%= t('components.navigation.menu.fashion.submenu.portraits') %>
                        </a>
                    </li>
                    <li class="menu-nav__dropdown-item">
                        <a href="/projects" class="menu-nav__link">
                            <%= t('components.navigation.menu.fashion.submenu.projects') %>
                        </a>
                    </li>
                </ul>
            </li>
            <li class="menu-nav__item">
                <a href="/agency-test" class="menu-nav__link">
                    <%= t('components.navigation.menu.agencyTest') %>
                </a>
            </li>
            <li class="menu-nav__item">
                <a href="/editorial" class="menu-nav__link">
                    <%= t('components.navigation.menu.editorial') %>
                </a>
            </li>
            <li class="menu-nav__item">
                <a href="/contact" class="menu-nav__link">
                    <%= t('components.navigation.menu.contactAndInfo') %>
                </a>
            </li>
        </ul>
        <div class="logo">
            <a href="/">
                <h1 class="logo__title"><%= t('components.header.title') %></h1>
                <h2 class="logo__subtitle"><%= t('components.header.location') %></h2>
            </a>
            <div class="logo__social-media">
                <a href="https://www.instagram.com/laurentxdubois/" target="_blank">
                    <%= t('components.header.socialMedia.instagram') %>
                </a>
                -
                <a href="https://www.youtube.com/channel/UCBKdjX7ZbqgZmNYWaU3izsw" target="_blank">
                    <%= t('components.header.socialMedia.youtube') %>
                </a>
            </div>
            <div class="logo__lang-switcher">
                <a href="<%= locals.currentLang === 'en' ? path.replace('/en', '') : path %>"
                   class="logo__lang-link <%= locals.currentLang === 'fr' ? 'active' : '' %>">
                    <img src="/img/logos/french-flag.svg" 
                         alt="<%= t('components.header.languageSwitcher.frenchFlag') %>" 
                         class="logo__lang-icon">
                    <span><%= t('components.header.languageSwitcher.fr') %></span>
                </a>
                <span class="logo__lang-separator">|</span>
                <a href="<%= locals.currentLang === 'en' ? path : '/en' + path %>"
                   class="logo__lang-link <%= locals.currentLang === 'en' ? 'active' : '' %>">
                    <img src="/img/logos/english-flag.svg" 
                         alt="<%= t('components.header.languageSwitcher.englishFlag') %>" 
                         class="logo__lang-icon">
                    <span><%= t('components.header.languageSwitcher.en') %></span>
                </a>
            </div>
        </div>
    </header>
